@model WelcomeToMyHead.ViewModels.BlogPosts.BlogPostViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>BlogPost</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        @*Drop down menu using the select tag helper*@
        
        <div class="form-group">
            <label asp-for="Post.Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Post.PostCategoryId" class="col-md-2 control-label">Category</label>
            <div class="dropdown col-md-10">
                <select asp-for="Post.PostCategoryId" asp-items="Model.Categories" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Post.Body" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Post.Body" class="form-control"></textarea>
                <span asp-validation-for="Post.Body" class="text-danger" />
            </div>
        </div>        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea' });</script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
